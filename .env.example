# ================================
# DevSecOps Dotfiles Configuration
# ================================
# Copy this file to .env and customize the values
# cp .env.example .env

# ================================
# User Information
# ================================
DOTFILES_USER_NAME="Your Name"
DOTFILES_USER_EMAIL="your.email@example.com"

# ================================
# Git Configuration
# ================================
# Personal Git Profile
GIT_PERSONAL_NAME="Your Name"
GIT_PERSONAL_EMAIL="your.personal@email.com"
GIT_PERSONAL_GITHUB_USER="your-github-username"
GIT_PERSONAL_SSH_KEY="~/.ssh/id_rsa"

# Work Git Profile
GIT_WORK_NAME="Your Name"
GIT_WORK_EMAIL="your.work@company.com"
GIT_WORK_GITHUB_USER="your-work-github-username"
GIT_WORK_SSH_KEY="~/.ssh/id_rsa"

# ================================
# GitHub Tokens
# ================================
# Personal Access Token (for personal repos)
GITHUB_TOKEN_PERSONAL=""

# Work Access Token (for work repos)
GITHUB_TOKEN_WORK=""

# ================================
# Kubernetes Configuration
# ================================
# Default namespace
KUBE_DEFAULT_NAMESPACE="default"

# Kubeconfig path
KUBECONFIG_PATH="~/.kube/config"

# Default context
KUBE_DEFAULT_CONTEXT=""

# ================================
# Docker Configuration
# ================================
# Docker registry
DOCKER_REGISTRY=""

# Docker username
DOCKER_USERNAME=""

# ================================
# AWS Configuration
# ================================
# Default AWS region
AWS_DEFAULT_REGION="us-east-1"

# AWS profile for personal
AWS_PERSONAL_PROFILE="personal"

# AWS profile for work
AWS_WORK_PROFILE="default"

# ================================
# Azure Configuration
# ================================
# Default Azure subscription
AZURE_DEFAULT_SUBSCRIPTION=""

# Azure resource group
AZURE_DEFAULT_RESOURCE_GROUP=""

# ================================
# GCP Configuration
# ================================
# GCP project ID
GCP_PROJECT_ID=""

# GCP default region
GCP_DEFAULT_REGION="us-central1"

# ================================
# Terraform Configuration
# ================================
# Terraform workspace
TF_WORKSPACE="default"

# Terraform backend type
TF_BACKEND="s3"

# ================================
# Security Scanning
# ================================
# Trivy cache directory
TRIVY_CACHE_DIR="~/.cache/trivy"

# Severity levels for security scans
SECURITY_SCAN_SEVERITY="HIGH,CRITICAL"

# ================================
# Editor Configuration
# ================================
# Default editor (nvim, vim, vi, code)
EDITOR="nvim"
VISUAL="nvim"

# ================================
# Terminal Configuration
# ================================
# Tmux default session name
TMUX_DEFAULT_SESSION="main"

# ================================
# Development Paths
# ================================
# Projects directory
PROJECTS_DIR="~/projects"

# Work projects directory
WORK_DIR="~/work"

# Personal projects directory
PERSONAL_DIR="~/personal"

# ================================
# Aliases Configuration
# ================================
# Enable/disable custom aliases (true/false)
ENABLE_KUBERNETES_ALIASES=true
ENABLE_DOCKER_ALIASES=true
ENABLE_GIT_ALIASES=true
ENABLE_AWS_ALIASES=true
ENABLE_TERRAFORM_ALIASES=true

# ================================
# Custom Configuration
# ================================
# Add your custom environment variables below

# ================================
# Dotfiles Configuration
# ================================
# Dotfiles directory location (usually ~/Desktop/dotfile or ~/.dotfiles)
DOTFILES_DIR="~/Desktop/dotfile"

# Auto-sync git profiles on shell start (true/false)
AUTO_SYNC_GIT_PROFILES=false
