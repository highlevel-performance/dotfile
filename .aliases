# ================================
# DevSecOps Aliases
# ================================

# ================================
# Navigation
# ================================
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~'
alias -- -='cd -'

# ================================
# List & File Operations
# ================================
alias la='eza -la --icons --git'
alias l='eza -l --icons --git'
alias ll='eza -la --icons --git'
alias lt='eza --tree --level=2 --icons'
alias lta='eza --tree --level=3 --icons'

# ================================
# Git Aliases
# ================================
alias g='git'
alias gs='git status'
alias ga='git add'
alias gaa='git add --all'
alias gc='git commit'
alias gcm='git commit -m'
alias gp='git push'
alias gpl='git pull'
alias gd='git diff'
alias gco='git checkout'
alias gb='git branch'
alias gba='git branch -a'
alias glog='git log --oneline --decorate --graph'
alias gloga='git log --oneline --decorate --graph --all'
alias gst='git stash'
alias gstp='git stash pop'

# Git Security
alias git-audit='git log --all --full-history --source -- "*password*" "*secret*" "*key*" "*.pem" "*.key"'
alias git-secrets='git secrets --scan'
alias gitleaks='gitleaks detect --source=. --verbose'

# Git Profile Management
alias git-personal='git-profile use personal'
alias git-work='git-profile use work'
alias git-current='git-profile current'
alias git-switch='git-profile list'

# Git clone with authentication
alias gclone='git-clone-auth'
alias git-clone='git-clone-auth'

# GitHub token shortcuts
alias gh-token='github-token'
alias gh-token-personal='github-token get personal'
alias gh-token-work='github-token get work'
alias gh-test='github-token test'

