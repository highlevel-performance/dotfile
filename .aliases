alias s3-buckets='aws s3api list-buckets --query "Buckets[].[Name,CreationDate]" --output table'

# ================================
# Security Tools
# ================================
alias nmap-quick='nmap -T4 -F'
alias nmap-full='nmap -T4 -A -v'
alias nmap-vuln='nmap -sV --script vulners'
alias trivy='trivy'
alias trivy-fs='trivy fs .'
alias trivy-config='trivy config .'
alias grype='grype'
alias grype-dir='grype dir:.'
alias snyk='snyk'
alias snyk-test='snyk test'
alias snyk-monitor='snyk monitor'
alias bandit='bandit -r .'
alias safety='safety check'
alias semgrep='semgrep --config=auto .'

# OWASP ZAP
alias zap-baseline='docker run -t owasp/zap2docker-stable zap-baseline.py -t'

# ================================
# Network & System
# ================================
alias ports='netstat -tulanp'
alias listening='lsof -i -P | grep LISTEN'
alias myip='curl -s ifconfig.me'
alias localip="ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -v '127.0.0.1'"
alias speedtest='curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python -'

# ================================
# Process Management
# ================================
alias psg='ps aux | grep -v grep | grep -i -e VSZ -e'
alias meminfo='free -m -l -t'
alias psmem='ps auxf | sort -nr -k 4 | head -10'
alias pscpu='ps auxf | sort -nr -k 3 | head -10'

